<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_credit_note_button" model="ir.ui.view">
        <field name="model">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="before">
                <button name="%(action_view_credit_note_popup)d"
                    string="Send Credit Note"
                    type="action"
                    class="oe_highlight"
                    invisible="state != 'posted' or toc_status != 'sent' or toc_status_credit_note == 'sent'"/>

            </xpath>
        </field>
    </record>

</odoo>